	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>1.7</java.version>
		<javax.inject.version>1</javax.inject.version>
		<HikariCP.version>2.2.5</HikariCP.version>
